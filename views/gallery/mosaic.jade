#mosaic_vid.w3-container.w3-content.w3-center.w3-padding-32(style='max-width:800px')
    h1.w3-center.custom-margin-block(style="font-weight:bold;") Vid√©os

    .row-img
        .column-vid
            - each video in videos_dir.slice(0, npcol_vid)
                video.center(src="videos/" +video,  type="video/mp4", controls="")
        .column-vid
            - each video in videos_dir.slice(npcol_vid, 2*npcol_vid)
                video.center(src="videos/" +video,  type="video/mp4", controls="")

#mosaic.w3-container.w3-center.w3-padding-12
    h1.w3-center.custom-margin-block(style="font-weight:bold;") Galerie
    .row-img
        .column-img
            - each image in images_dir.slice(0, npcol)
                img(src="galleries/" +image, loading="lazy")
        .column-img
            - each image in images_dir.slice(npcol, 2*npcol)
                img(src="galleries/" +image, loading="lazy")
        .column-img
            - each image in images_dir.slice(2*npcol, 3*npcol)
                img(src="galleries/" +image, loading="lazy")
        .column-img
            - each image in images_dir.slice(3*npcol, 4*npcol)
                img(src="galleries/" +image, loading="lazy")
